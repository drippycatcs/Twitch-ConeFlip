# ConeFlip Environment Configuration

# Server Configuration
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# Application Base URL (Required for production)
BASE_URL=http://localhost:3000

# Database Configuration
DB_PATH=./data

# Twitch Configuration (Required)
TWITCH_CLIENT_ID=your_twitch_client_id_here
TWITCH_CHANNEL=your_channel_name
BOT_NAME=your_bot_name

# Twitch API Tokens (Optional but recommended)
STREAMER_ACCESS_TOKEN=your_streamer_access_token
BOT_ACCESS_TOKEN=your_bot_access_token
TWITCH_USER_ID=your_twitch_user_id

# Twitch OAuth for User Authentication (Required for auth features)
TWITCH_OAUTH_CLIENT_ID=your_oauth_app_client_id
TWITCH_OAUTH_CLIENT_SECRET=your_oauth_app_client_secret
TWITCH_OAUTH_REDIRECT_URI=http://localhost:3000/auth/callback

# Channel Point Rewards (Optional - run scripts/create-rewards.js to generate these)
TWITCH_DUEL_REWARD=reward_id_for_duels
TWITCH_CONE_REWARD=reward_id_for_cone_flips
TWITCH_UNBOX_CONE=reward_id_for_unboxing
TWITCH_BUY_CONE=reward_id_for_buying_cones

# 7TV Integration (Optional)
SEVENTV_TOKEN=your_7tv_api_token

# Authentication Configuration
DEBUG_PASSWORD=change_this_to_a_secure_password
ADMINS=your_twitch_username,other_admin_username
SESSION_SECRET=your_session_secret_here
